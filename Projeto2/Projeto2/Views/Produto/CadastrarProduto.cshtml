@model Projeto2.Models.Produto

<h2>Cadastro de Produtos</h2>

<form asp-action="CadastrarProduto" method="post">
    <div>
        <label>Nome:</label>
        <input asp-for="Nome" required />
    </div>
    <div>
        <label>Descrição:</label>
        <input asp-for="Descricao" type="text" required />
    </div>
    <div>
        <label>Preço:</label>
        <input asp-for="Preco" type="number" step="0.01" min="0" required />
    </div>
    <div>
        <label>Quantidade:</label>
        <input asp-for="Quantidade" type="number" min="0" required />
    </div>
    <button type="submit">Cadastrar produto</button>
</form>

